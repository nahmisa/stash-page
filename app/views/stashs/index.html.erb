	<div class="row">
		<div class="col-md-12">
			<ul class="nav nav-pills">
				<li class="logo">
          <%= image_tag "smaller-baby-bottle.png", class: "pull-left img-responsive" %>
					<%= link_to "/stash", "#" %>
				</li>
        <li class="pull-right">
          <%= link_to "My Stash", "#", id: "milks-link" %>
        </li>
				<li class="pull-right">
					<a href="#">Profile</a>
				</li>
			</ul>

			<div class="jumbotron">
        <section id="stash-info">
          <%= image_tag "smaller-baby-face.png", class: "pull-right img-responsive" %>
  				<h1 class="stash-info">
  					Hello, world!
  				</h1>
          <h1 class="milk-info">
            My stash
          </h1>
  				<p class="stash-info">
  					This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.
  				</p>
          <p class="milk-info">
            This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.
          </p>
      </section>

        <section id="milks-section">

          <%= form_for @milk, html: { class: "form-inline" }, remote: true do |f| %>
            <fieldset>
                <div class="form-group col-xs-3">
                  <label for="milk_milk_type" class="control-label">
                    Type
                  </label>
                    <%= f.text_field :milk_type, class: "form-control", placeholder: "Milk" %>
                </div>
                <div class="form-group col-xs-3">
                  <label for="milk_date" class="control-label">
                    Date
                  </label>
                  <%= f.date_field :date, class: "form-control" %>
                  <small class="help-block">
                    When pumped/frozen/thawed
                  </small>
                </div>
                <div class="form-group col-xs-3">
                  <label for="milk_amount" class="control-label">
                    Amount
                  </label>
                    <%= f.number_field :amount, class: "form-control", placeholder: "oz" %>
                </div>
                <div class="form-group col-xs-3">
                    <%= f.submit 'Add', class: 'btn btn-success form-control add-btn' %>
                </div>


            </fieldset>
          <% end %>
          <div class="milk-table-container">


          <table class="table table-striped table-hover table-condensed">
				<thead>
					<tr>
						<th>
							Type
						</th>
						<th>
							Expiration Date
						</th>
						<th>
							Amount
						</th>
					</tr>
				</thead>
				<tbody id="milk">
          <%= render @milks %>
				</tbody>
			</table>
      </div>

        </section>
			</div>
		</div>
